@model InMyAppinion.Models.ProfessorViewModels.ProfessorDetailViewModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Profesor";
}

<h2>Details</h2>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Predaje na predmetima
        </dt>
        <dd>
            @foreach (var item in Model.Subjects)
            {
                <a asp-action="Details" asp-controller="Subject" asp-route-Id="@item.ID">@item.Name</a> 
                if (!item.Equals(Model.Subjects.Last())) {
                    @Html.Raw("|")
                };

            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvgInteractivity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvgInteractivity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvgAccessibility)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvgAccessibility)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvgMentoring)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvgMentoring)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvgQuality)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvgQuality)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvgTotal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvgTotal)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Biography)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Biography)
        </dd>
        <dt>
            Kritike
        </dt>
        <dd>
            @foreach (var item in Model.Reviews)
            {
                <a asp-action="Details" asp-controller="ProfessorReviews" asp-route-Id="@item.ID">@item.TotalGrade</a>@: |

            }
        </dd>
    </dl>
</div>
<div>

    @if (await AuthorizationService.AuthorizeAsync(User, "CanReview"))
    {
        <a asp-action="Create" asp-controller="ProfessorReviews" asp-route-Id="@Model.ID">Dodaj kritiku</a>@: |
    }
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>


</div>
