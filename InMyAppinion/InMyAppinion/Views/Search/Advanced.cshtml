@model InMyAppinion.ViewModels.Filters.SearchFilter
@{
    ViewData["Title"] = "AdvancedSearch";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<h2>AdvancedSearch</h2>

<div id="tabs">
    <ul>
        <li><a href="#tabs-1">Predmeti (@Model.Subjects.Count())</a></li>
        <li><a href="#tabs-2">Profesori (@Model.Professors.Count())</a></li>
    </ul>

    <div id="tabs-1">
        @foreach (var item in Model.Subjects)
        {

            <a asp-action="Details" asp-controller="Subjects" asp-route-id="@item.ID">@item.Name </a>
            <br />
        }
    </div>

    <div id="tabs-2">
        @foreach (var item in Model.Professors)
        {

            <a asp-action="Details" asp-controller="Professors" asp-route-id="@item.ID">@item.FullName </a>
            <br />
        }
    </div>
</div>
    @section Scripts {
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script>
            $(function () {
                $("#tabs").tabs();
            });
        </script>
    }
