@model string

@{
    ViewData["Title"] = "SubjectTagsCloud";
}

<h2>Područja</h2>

<div id="cloud"></div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function ($) {
            $.get('@Url.Action("GetCloud", "Subjects")', function (data) {
                var values = data;

                $('#cloud').jQCloud(values, {
                    width: 600,
                    height: 300
                });
            });
        });
    </script>
}
